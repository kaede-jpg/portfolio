<div class="navbar bg-base-300 rounded-box">
  <div class="flex-1 px-2 lg:flex-none">
    <%= link_to t('helpers.title'), records_path, class:"btn btn-ghost text-xl" %>
  </div> 
  <div class="flex justify-end flex-1 px-2">
    <div class="flex items-stretch">
      <%= link_to t('.logout'), :logout, data: { turbo_method: :delete }, class:"btn btn-ghost rounded-btn" %>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost rounded-btn"><i class="fa-solid fa-bars"></i></div>
        <ul tabindex="0" class="menu dropdown-content z-[1] p-2 shadow bg-base-100 rounded-box w-52 mt-4">
            <li><%= link_to t('users.show.title'), user_path %></li>
            <li><%= link_to t('relationships.menu.title'), relationships_menu_path %></li>
            <% unless current_user.linked_line? %>
              <li><%= link_to t('.login_with_line'), auth_at_provider_path(provider: :line), class: "btn" %></li>
            <% end %>
            <div class="line-it-button" data-lang="ja" data-type="friend" data-env="REAL"   data-lineId="@127susri" style="display: none;"></div>
            <script src="https://www.line-website.com/social-plugins/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
        </ul>
      </div>
    </div>
  </div>
</div>
