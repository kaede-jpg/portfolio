<%= form_with url: login_path, method: :post do |f| %>
  <div>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </div>
  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit t('.login'), class:"btn" %>
  </div>
<% end %>
