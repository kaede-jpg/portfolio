<%= form_with url: login_path, method: :post do |f| %>
  <div>
    <%= f.label :user_id %>
    <%= f.text_field :user_id, class:"input input-bordered" %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, class:"input input-bordered" %>
  </div>
  <div>
    <%= f.submit t('.login'), class:"btn" %>
  </div>
<% end %>
