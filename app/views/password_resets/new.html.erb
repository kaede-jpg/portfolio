<div class="flex flex-col items-center pt-4 gap-3">
    <h1 class="text-xl font-bold underline decoration-2 underline-offset-2"><%= title t('.title') %></h1>
    <%= form_with url: password_resets_path do |f| %>
        <div class="flex flex-col items-center gap-2">
            <div>
                <%= f.label :email, style: "display: block" %>
                <%= f.email_field :email, class:"input input-bordered" %>
            </div>
            <div>
                <%= f.submit t('helpers.submit.send'), class:"btn btn-secondary" %>
            </div>
        </div>
    <% end %>
</div>
