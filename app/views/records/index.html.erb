<div class="text-center bg-white text-lg text-red-600 font-bold py-2">
  <%= @message %>
</div>
<div>
  <%= week_calendar(number_of_weeks: 1, events: @records, attribute: :created_at,) do |date ,records| %>
    <%= date %>
    <% records.each do |record| %>
      <%= render record %>
    <% end %>
  <% end %>
</div>

<%= link_to "New record", new_record_path %>
