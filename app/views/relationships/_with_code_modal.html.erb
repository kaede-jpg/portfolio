<dialog id="with_code_modal" class="modal">
    <div class="modal-box">
        <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
        </form>
        <div class="flex flex-col gap-4">
            <h2 class="text-lg font-bold">連携コードの入力</h2>
            <p class="mt-2">パートナーから教わった連携コードを入力してください。</p>
            <%= form_with model: relationship, url: relationships_path do |f| %>
                <%= render 'shared/error_message' , object: f.object %>
                <div class="flex flex-col items-center gap-2">
                    <%= f.text_field :relationship_code, placeholder: t('activerecord.attributes.user.relationship_code'), class: "input input-bordered w-full max-w-xs" %>
                    <%= f.submit t('helpers.submit.register'), class: "btn btn-sm btn-secondary" %>
                </div>
            <% end %>
        </div>
    </div>
</dialog>