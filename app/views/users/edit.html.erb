<h1><%= t('.title') %></h1>
<% if @user.crypted_password.nil? %>
  <%= form_with(model: @user) do |f| %>
  <%= render 'shared/error_message' , object: f.object %>
  <div>
    <%= f.label :user_id, style: "display: block" %>
    <%= f.text_field :user_id %>
  </div>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit t('helpers.submit.register'), class: "btn" %>
  </div>
<% end %>

<% else %>
  <%= render "form", user: @user %>
<% end %>
<br>
<div>
  <%= link_to t('.show_user'), user_path, class: "btn" %>
</div>
