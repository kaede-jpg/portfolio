<%= form_with(model: user, url: user_path) do |f| %>
  <%= render 'shared/error_message' , object: f.object %>
  <div class="flex flex-col items-center gap-2">
    <div>
      <%= f.label :user_id, style: "display: block" %>
      <%= f.text_field :user_id, class:"input input-bordered" %>
    </div>
    <div>
      <%= f.label :name, style: "display: block" %>
      <%= f.text_field :name, class:"input input-bordered" %>
    </div>
    <div>
      <%= f.label :email, style: "display: block" %>
      <%= f.text_field :email, class:"input input-bordered" %>
    </div>
    <div>
      <%= f.label :password, style: "display: block" %>
      <%= f.password_field :password, class:"input input-bordered" %>
    </div>
    <div>
      <%= f.label :password_confirmation, style: "display: block" %>
      <%= f.password_field :password_confirmation, class:"input input-bordered" %>
    </div>
    <div>
      <%= f.submit t('helpers.submit.register'), class: "btn btn-accent" %>
    </div>
  </div>
<% end %>
