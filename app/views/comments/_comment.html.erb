<div id="<%= dom_id comment %>" class="grid grid-cols-6 gap-4">
    <div><%= comment.user.name%></div>
    <div class="col-span-4"><%= comment.body %></div>
    <div>
        <% if current_user == comment.user%>
            <div>
                <%= link_to "削除", comment_path(comment), data: { turbo_method: :delete, turbo_confirm: "コメントを削除しますか？"}, class: "btn" %>
            </div>
        <% end %>
    </div>
</div>