<dialog id="comment_modal_<%= dom_id record %>" class="modal modal-bottom">
  <div class="modal-box">
    <div class="flex flex-col gap-2 m-4">
      <h3 class="font-bold text-lg"><%= t('.title') %></h3>
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
      </form>
      <div class="flex flex-col items-center gap-4">
        <div class="w-full">
          <table class="table">
            <tbody id="comment-table-<%= dom_id record %>" class="w-full">
              <% record.comments.each do |comment| %>
                <%= render comment %>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= render 'comments/form', comment: comment, record: record %>
      </div>
    </div>
  </div>
</dialog>